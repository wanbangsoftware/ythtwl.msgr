<?xml version="1.0" encoding="utf-8"?>
<com.hlk.hlklib.lib.view.CorneredView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/ui_dialog_view_margin_size"
    android:layout_marginRight="@dimen/ui_dialog_view_margin_size"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    app:cv_border_size="0dp"
    app:cv_corner_size="@dimen/ui_dialog_view_corner_size">

    <TextView
        android:id="@+id/ui_dialog_main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ui_dialog_view_margin_size"
        android:gravity="center"
        android:maxLines="5"
        android:minHeight="@dimen/ui_dialog_view_content_min_height"
        android:scrollbarFadeDuration="1000"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical"
        android:text="@string/app_name" />

    <include layout="@layout/popup_dialog_buttons" />

</com.hlk.hlklib.lib.view.CorneredView>