<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ui_tool_view_delete_button"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/color_ff4141"
    android:gravity="center"
    android:orientation="horizontal"
    app:layout_itemType="menu">

    <com.hlk.hlklib.lib.view.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="@string/ui_icon_delete"
        app:ctv_active_color="@color/colorPrimary"
        app:ctv_normal_color="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="删除"
        android:textColor="@android:color/white" />
</LinearLayout>